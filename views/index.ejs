<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><img src="/img/pokebola.png" alt="pokebola"></li>
                <li>
                    <a href="/">
                        <h1>Pokédex</h1>
                    </a>
                </li>
                <li><a href="#cadastro">Cadastro</a></li>
                <li><a href="#cards">Pokemons</a></li>
            </ul>
        </nav>
    </header>
    <section class="banner">
        <img src="/img/banner.jpg" alt="banner">
    </section>
    <main>
        <section id="cards">
            <% pokedex.forEach((pokemon) => { %>
                <div class="card">
                    <img src="<%= pokemon.imagem %> " alt="">
                    <h2><%= pokemon.nome %> </h2>
                    <p class="descricao"><%= pokemon.descricao %> </p>
                    <p>Tipo: <%= pokemon.tipo %> </p>
                    <div id="aling">
                        <a id="editar" href="/detalhes/<%= pokemon.id %>">Editar</a>
                        <a id="apagar" href="/delete/<%= pokemon.id %>">Apagar</a>
                    </div>
                </div>
            <% }) %>
        </section>
        <section id="cadastro">

            <img src="/img/pokedex.png" alt="">

            <div>
                <% if (pokemon == undefined) { %>
                <h1>Cadastre um novo Pokemon!</h1>
                <form action="/create" method="POST">
                    <label for="nome">Nome:</label>
                    <input type="text" id="nome" name="nome">
                    <label for="descricao">Descrição:</label>
                    <input type="text" id="descricao" name="descricao">
                    <label for="tipo">Tipo: </label>
                    <input type="text" name="tipo" id="tipo">
                    <label for="imagem">Link da Imagem:</label>
                    <input type="text" name="imagem" id="imagem">
                    <button id="btnCadastrar" type="submit">Cadastrar</button>
                </form>
                <% } else { %> 
                           <h1>Atualização do Pokemon!</h1>
                <form action="/update/<%= pokemon.id %>" method="POST">
                    <label for="nome">Nome:</label>
                    <input type="text" id="nome" name="nome" value="<%= pokemon.nome %>">
                    <label for="descricao">Descrição:</label>
                    <input type="text" id="descricao" name="descricao" value="<%= pokemon.descricao %>">
                    <label for="tipo">Tipo:</label>
                    <input type="text" name="tipo" id="tipo" value="<%= pokemon.tipo %>">
                    <label for="imagem">Link da Imagem:</label>
                    <input type="text" name="imagem" id="imagem" value="<%= pokemon.imagem %>">
                    <button id="btnAtualizar" type="submit">Atualizar</button>
                </form>
                <% } %>
            </div>
        </section>
    </main>
    <footer>
        <p>&copy; Todos os direitos reservados <a target="_blank" href="">@mateus_suricato</a></p>
        <p>Dados retirados de <a href="https://www.pokemon.com/br/pokedex/">Pokedex</a></p>
    </footer>
</body>
</html>