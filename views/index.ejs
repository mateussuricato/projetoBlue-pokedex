<body>
    
    <%- include('./partials/header.ejs') %> 

    <main>
        <section class="cards">
            <% pokedex.forEach((pokemon) => { %>
                <a href="detalhes/<%=pokemon.id%>">
                    <div class="card">
                        <h2><%= pokemon.nome %> </h2>
                        <img src="<%= pokemon.imagem %> " alt="">
